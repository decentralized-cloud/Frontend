{
  "name": "edge-cloud-frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "./script/env.sh && cp env-config.js ./public/ && react-scripts start",
    "build": "sh -ac '. ./.env; react-scripts build'",
    "test": "react-scripts test --coverage",
    "test:ci": "CI=true react-scripts test --coverage --coverageReporters=text-lcov | coveralls",
    "eject": "react-scripts eject",
    "relay": "relay-compiler --src ./src --schema ./schema/schema.graphql --extensions js jsx",
    "relay:watch": "npm run relay -- --watch",
    "flow": "flow",
    "lint": "eslint src",
    "fixlint": "eslint --fix --ext .jsx --ext .js src",
    "precommit": "lint-staged"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@axa-fr/react-oidc-context": "^3.1.6",
    "@axa-fr/react-oidc-redux": "^3.1.6",
    "@axa-fr/react-oidc-redux-fetch": "^3.1.6",
    "@material-ui/core": "^4.11.2",
    "@material-ui/icons": "^4.11.2",
    "clsx": "^1.1.1",
    "cuid": "^2.1.8",
    "graphql-relay": "^0.6.0",
    "immutable": "^4.0.0-rc.12",
    "node-sass": "^5.0.0",
    "oidc-client": "^1.10.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-redux": "^7.2.2",
    "react-relay": "^10.1.0",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.1",
    "recompose": "^0.30.0",
    "redux-devtools-extension": "^2.13.8",
    "redux-form": "^8.3.7",
    "redux-oidc": "^4.0.0-beta1",
    "redux-saga": "^1.1.3"
  },
  "devDependencies": {
    "@types/jest": "^26.0.16",
    "@types/node": "^14.14.10",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "babel-plugin-macros": "^3.0.0",
    "babel-plugin-relay": "^10.1.0",
    "chance": "^1.1.7",
    "coveralls": "^3.1.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.5",
    "flow-bin": "^0.138.0",
    "graphql": "^15.4.0",
    "husky": "^4.3.4",
    "jest-enzyme": "^7.1.2",
    "lint-staged": "^10.5.3",
    "mocha-lcov-reporter": "^1.3.0",
    "prettier": "^2.2.1",
    "react-test-renderer": "^17.0.1",
    "relay-compiler": "^10.1.0",
    "relay-config": "^10.1.0",
    "typescript": "^4.1.2"
  },
  "pre-commit": "lint:staged",
  "lint-staged": {
    "src/**/*.{js,jsx,json,css}": [
      "prettier --write --single-quote true --trailing-comma all --print-width 150",
      "npm run fixlint",
      "git add"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!<rootDir>/node_modules/",
      "!<rootDir>/path/to/dir/"
    ],
    "coverageReporters": [
      "text"
    ]
  },
  "proxy": "https://api.edge-cloud.com"
}
