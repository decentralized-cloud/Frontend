{
  "name": "edge-cloud-console",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "./scripts/env.sh && cp env-config.js ./public/ && react-scripts start",
    "start:windows": "@powershell -NoProfile -ExecutionPolicy Unrestricted -Command scripts/env.ps1;copy env-config.js .\\public\\ ; react-scripts start",
    "build": "sh -ac '. ./.env; react-scripts build'",
    "test": "react-scripts test --coverage",
    "test:debug": "react-scripts --inspect-brk test --runInBand --no-cache",
    "test:ci": "CI=true react-scripts test --coverage --coverageReporters=text-lcov | coveralls",
    "eject": "react-scripts eject",
    "relay": "relay-compiler --language typescript --src ./src --schema ./schema/schema.graphql --extensions js jsx ts tsx",
    "relay:watch": "npm run relay -- --watch",
    "flow": "flow",
    "lint": "eslint src",
    "fixlint": "eslint --fix --ext .js --ext .jsx --ext .ts --ext .tsx src",
    "prepare": "husky install",
    "lint-staged": "lint-staged",
    "pre-commit": "lint-staged",
    "format": "prettier --write --single-quote true --trailing-comma all --print-width 150 ./src && npm run fixlint"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@auth0/auth0-react": "^1.4.0",
    "@manaflair/redux-batch": "^1.0.0",
    "@material-ui/core": "^4.11.3",
    "@material-ui/icons": "^4.11.2",
    "@material-ui/lab": "^4.0.0-alpha.57",
    "@reduxjs/toolkit": "^1.5.1",
    "@testing-library/user-event": "^13.0.16",
    "@types/redux-logger": "^3.0.8",
    "clsx": "^1.1.1",
    "cuid": "^2.1.8",
    "final-form": "^4.20.2",
    "google-map-react": "^2.1.9",
    "graphql-relay": "^0.6.0",
    "history": "^5.0.0",
    "i18next": "^20.1.0",
    "i18next-browser-languagedetector": "^6.1.0",
    "immutable": "^4.0.0-rc.12",
    "material-ui-popup-state": "^1.8.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-final-form": "^6.5.3",
    "react-i18next": "^11.8.12",
    "react-redux": "^7.2.3",
    "react-relay": "^11.0.1",
    "react-router-dom": "^5.2.0",
    "redux-devtools-extension": "^2.13.9",
    "redux-logger": "^3.0.6",
    "redux-saga": "^1.1.3",
    "web-vitals": "^1.1.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.10",
    "@testing-library/react": "^11.2.5",
    "@testing-library/user-event": "^13.0.16",
    "@types/google-map-react": "^2.1.0",
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.36",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.3",
    "@types/react-redux": "^7.1.16",
    "@types/react-relay": "^11.0.0",
    "@types/react-router-dom": "^5.1.7",
    "@types/relay-runtime": "^10.1.10",
    "@types/webpack-env": "^1.16.0",
    "babel-plugin-macros": "^3.0.1",
    "babel-plugin-relay": "^11.0.1",
    "chance": "^1.1.7",
    "coveralls": "^3.1.0",
    "flow-bin": "^0.147.0",
    "graphql": "^15.5.0",
    "husky": "^5.2.0",
    "lint-staged": "^10.5.4",
    "mocha-lcov-reporter": "^1.3.0",
    "prettier": "^2.2.1",
    "react-scripts": "^4.0.3",
    "relay-compiler": "^11.0.1",
    "relay-compiler-language-typescript": "^13.0.6",
    "relay-config": "^11.0.1",
    "typescript": "^4.2.3"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css}": [
      "prettier --write --single-quote true --trailing-comma all --print-width 150",
      "npm run fixlint"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!<rootDir>/node_modules/",
      "!<rootDir>/path/to/dir/"
    ],
    "coverageReporters": [
      "text"
    ]
  },
  "proxy": "https://devapi.edgecloud9.io/"
}
