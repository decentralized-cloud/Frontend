{
  "name": "edge-cloud-frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "./script/env.sh && cp env-config.js ./public/ && react-scripts start",
    "start:windows": "@powershell -NoProfile -ExecutionPolicy Unrestricted -Command script/env.ps1;copy env-config.js .\\public\\ ; react-scripts start",
    "build": "sh -ac '. ./.env; react-scripts build'",
    "test": "react-scripts test --coverage",
    "test:debug": "react-scripts --inspect-brk test --runInBand --no-cache",
    "test:ci": "CI=true react-scripts test --coverage --coverageReporters=text-lcov | coveralls",
    "eject": "react-scripts eject",
    "relay": "relay-compiler --src ./src --schema ./schema/schema.graphql --extensions js jsx ts tsx",
    "relay:watch": "npm run relay -- --watch",
    "flow": "flow",
    "lint": "eslint src",
    "fixlint": "eslint --fix --ext .js --ext .jsx --ext .ts --ext .tsx src",
    "pre-commit": "lint-staged",
    "format": "prettier --write --single-quote true --trailing-comma all --print-width 150 ./src && npm run fixlint"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@material-ui/core": "^4.11.2",
    "@material-ui/icons": "^4.11.2",
    "@reduxjs/toolkit": "^1.5.0",
    "@testing-library/user-event": "^12.6.0",
    "connected-react-router": "^6.8.0",
    "cuid": "^2.1.8",
    "graphql-relay": "^0.6.0",
    "history": "^5.0.0",
    "i18next": "^19.8.4",
    "i18next-browser-languagedetector": "^6.0.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-i18next": "^11.8.5",
    "react-redux": "^7.2.2",
    "react-relay": "^10.1.2",
    "react-router-dom": "^5.2.0",
    "redux-devtools-extension": "^2.13.8",
    "redux-form": "^8.3.7",
    "redux-saga": "^1.1.3",
    "web-vitals": "^1.0.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.8",
    "@testing-library/react": "^11.2.3",
    "@testing-library/user-event": "^12.6.0",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.20",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-redux": "^7.1.15",
    "@types/react-router-dom": "^5.1.7",
    "@types/webpack-env": "^1.16.0",
    "babel-plugin-macros": "^3.0.1",
    "babel-plugin-relay": "^10.1.2",
    "chance": "^1.1.7",
    "coveralls": "^3.1.0",
    "flow-bin": "^0.142.0",
    "graphql": "^15.4.0",
    "husky": "^4.3.7",
    "lint-staged": "^10.5.3",
    "mocha-lcov-reporter": "^1.3.0",
    "prettier": "^2.2.1",
    "react-scripts": "^4.0.1",
    "relay-compiler": "^10.1.2",
    "relay-config": "^10.1.2",
    "typescript": "^4.1.3"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css}": [
      "prettier --write --single-quote true --trailing-comma all --print-width 150",
      "npm run fixlint"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!<rootDir>/node_modules/",
      "!<rootDir>/path/to/dir/"
    ],
    "coverageReporters": [
      "text"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "proxy": "https://api.edge-cloud.com"
}
