{
  "name": "edge-cloud-frontend",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "./script/env.sh && cp env-config.js ./public/ && react-scripts start",
    "build": "sh -ac '. ./.env; react-scripts build'",
    "test": "react-scripts test --coverage",
    "test:ci": "CI=true react-scripts test --coverage --coverageReporters=text-lcov | coveralls",
    "eject": "react-scripts eject",
    "relay": "relay-compiler --src ./src --schema ./schema/schema.graphql --extensions js jsx",
    "relay:watch": "npm run relay -- --watch",
    "flow": "flow",
    "lint": "eslint src",
    "fixlint": "eslint --fix --ext .jsx --ext .js src",
    "precommit": "lint-staged"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@axa-fr/react-oidc-context": "^3.0.4-alpha.0",
    "@axa-fr/react-oidc-redux": "^3.0.4-alpha.0",
    "@axa-fr/react-oidc-redux-fetch": "^3.0.4-alpha.0",
    "@material-ui/core": "^4.8.0",
    "@material-ui/icons": "^4.5.1",
    "clsx": "^1.0.4",
    "cuid": "^2.1.6",
    "graphql-relay": "^0.6.0",
    "immutable": "^4.0.0-rc.12",
    "node-sass": "^4.13.0",
    "oidc-client": "^1.9.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-redux": "^7.1.3",
    "react-relay": "^7.1.0",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.3.0",
    "recompose": "^0.30.0",
    "redux-devtools-extension": "^2.13.8",
    "redux-form": "^8.2.6",
    "redux-oidc": "^4.0.0-beta1",
    "redux-saga": "^1.1.3"
  },
  "devDependencies": {
    "@types/jest": "^24.0.23",
    "@types/node": "^12.12.17",
    "@types/react": "^16.9.16",
    "@types/react-dom": "^16.9.4",
    "babel-plugin-macros": "^2.8.0",
    "babel-plugin-relay": "^7.1.0",
    "chance": "^1.1.4",
    "coveralls": "^3.0.9",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.15.1",
    "flow-bin": "^0.114.0",
    "graphql": "^14.5.8",
    "husky": "^3.1.0",
    "jest-enzyme": "^7.1.2",
    "lint-staged": "^9.5.0",
    "mocha-lcov-reporter": "^1.3.0",
    "prettier": "^1.19.1",
    "react-test-renderer": "^16.12.0",
    "relay-compiler": "^7.1.0",
    "relay-config": "^7.1.0",
    "typescript": "^3.7.3"
  },
  "pre-commit": "lint:staged",
  "lint-staged": {
    "src/**/*.{js,jsx,json,css}": [
      "prettier --write --single-quote true --trailing-comma all --print-width 150",
      "npm run fixlint",
      "git add"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!<rootDir>/node_modules/",
      "!<rootDir>/path/to/dir/"
    ],
    "coverageReporters": [
      "text"
    ]
  },
  "proxy": "https://api.edge-cloud.com"
}
